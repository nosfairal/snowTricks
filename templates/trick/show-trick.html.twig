{% extends 'base.html.twig' %}

{% block body %}
    <div class="card  m-4 col-8 col-lg-4">
        <img src="{{ asset ('uploads/pictures/' ~ trick.pictures[0].fileName) }}"class="card-img-top p-1 img-fluid">
        <div class="card-body text-center">
            <h5 class="card-title">{{ trick.name }}</h5>
            <p class="card-text text-muted">{{ trick.slug }}</p>
            {#<p class="card-text text">{{ trick.author }}</p>#}
            <div class="card-footer text-muted">
                {#<p>Publié le : {{ attribute.creationDate|date("d/m/Y \\à H:i") }}</p>
                <p>Rédigé par : {{ author }}</p>
                {% if attribute.lastUpdate  is not null %}<p>Dernière modification le : {{ attribute.lastUpdate|date("d/m/Y \\à H:i") }}</p>{% endif %}#}
            </div>
        </div>
    </div>

{% endblock %}