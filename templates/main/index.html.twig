{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Snowtricks!{% endblock %}

{% block content %}
    <div class="container">
    <h1 class="text-center">Bienvenue sur Snowtricks</h1>
    <div class="row justify-content-around text-center">
        {% for trick in tricks %}
                    <a href="{{ path('show-trick', {'slug': trick.slug}) }}" class="card  m-4 col-9 col-lg-3 text-decoration-none">
                        <img src="{{ asset ('uploads/pictures/' ~ trick.pictures[0].fileName) }}"class="card-img-top card-trick-picture img-fluid">
                        <div class="card-body">
                            <h5 class="card-title">{{ trick.name }}</h5>
                            <div class="card-footer text-muted">
                                <i class="bi bi-pencil-fill"></i>
                                <i class="bi bi-trash-fill"></i>
                            </div>
                        </div>
                    </a>
        {% endfor %}
    </div>
    </div>


{% endblock %}
