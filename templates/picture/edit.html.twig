{% extends 'base.html.twig' %}

{% block content %}
{{ form_start(form, {'attr': {'id': 'picture'}}) }}
{{ form_row(form.title) }}
{{ form_row(form.description) }}
{% if picture %}
	<img class="img-fluid" style="max-width:300px;" src="{{ asset('uploads/pictures/' ~ picture.filename) }}" alt="{{ picture.title }}">
	<p class="mt-1 mb-0">Remplacer ce fichier :</p>
{% endif %}
{{ form_row(form.filename) }}

<button class="btn btn-primary h-100 me-1 mt-1">
	<i class="fas fa-save"></i>
	{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
{% endblock %}