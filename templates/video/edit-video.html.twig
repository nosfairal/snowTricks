{% extends 'base.html.twig' %}
{% block title %} Modification d'une video{% endblock %}

{% block content %}
<div class="container">
<h1>Modification d'une video</h1>
{{ form_start(form, {'attr': {'id': 'video'}}) }}
{{ form_row(form.title) }}
{% if video %}
	<iframe class="" src="{{ video.videoUrl | formatVideo }}"  height="200px" width="300px" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
	<p class="mt-1 mb-0">Remplacer cette video :</p>
{% endif %}
{{ form_row(form.videoUrl, {
'help' :""}) }}


<button class="btn btn-primary h-100 me-1 mt-1">
	<i class="bi bi-save"></i>
	{{ button_label|default('Modifier') }}</button>
{{ form_end(form) }}
</div>
{% endblock %}