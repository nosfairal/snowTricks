{% extends 'base.html.twig' %}

{% block title %}Changer votre mot de passe{% endblock %}

{% block content %}
    <div class="container text-center" id="reset-password-form">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="mb-5">Changer votre mot de passe</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrez votre email et nous vous fourniront un lien pour changer votre mot de passe.
                </small>
            </div>

            <button class="btn btn-primary mt-4">Envoyez votre demande de nouveau mot de passe.</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
