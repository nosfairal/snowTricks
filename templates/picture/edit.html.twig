{% extends 'base.html.twig' %}
{% block title %} Modification d'une image{% endblock %}

{% block content %}
<div class="container text-center" id="edit-img-form">
<h1>Modification d'une image</h1>
{{ form_start(form, {'attr': {'id': 'picture'}}) }}
{{ form_row(form.title) }}
{{ form_row(form.description) }}
{% if picture %}
	<img class="img-fluid" class="mt-2" style="max-width:300px;" src="{{ asset('uploads/pictures/' ~ picture.filename) }}" alt="{{ picture.title }}">
	<p class="mt-1 mb-0">Remplacer cette image :</p>
{% endif %}
{{ form_row(form.filename) }}

<button class="btn btn-primary h-100 me-1 mt-1">
	<i class="bi bi-save"></i>
	{{ button_label|default('Modifier') }}</button>
{{ form_end(form) }}
</div>
{% endblock %}