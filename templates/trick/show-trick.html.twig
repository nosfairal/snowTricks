{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
    <div class="row">
        <div class="card  mx-auto col-12 col-lg-8 mt-4 mb-2">
            <img src="{{ asset ('uploads/pictures/' ~ trick.pictures[0].fileName) }}"class="card-img-top p-2 img-fluid">
            <div class="card-body text-center">
                <h5 class="card-title text-center">{{ trick.name }}</h5>
                <hr class="my-3"/>
                <p class="card-text text-muted"> Publié par : {{ trick.author.userName }} | le : {{ trick.createdAt|date("d/m/Y \\à H:i") }} | Catégorie : {{ trick.groupTrick.name }} | 0 commentaires</p>
                    {#{% if attribute.lastUpdate  is not null %}<p>Dernière modification le : {{ attribute.lastUpdate|date("d/m/Y \\à H:i") }}</p>{% endif %}#}
                <hr class="my-3"/>
                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        <div id="carousel" class="carousel slide mt-3 mb-2" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target=".carousel" data-slide-to="0" class="active"></li>
                                <li data-target=".carousel" data-slide-to="1" class=""></li>
                                <li data-target=".carousel" data-slide-to="2" class=""></li>
                                <li data-target=".carousel" data-slide-to="3" class=""></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="w-100 img-fluid trickMedia" src="{{ asset ('uploads/pictures/' ~ trick.pictures[0].fileName) }}" alt="nosepress-image-7">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100 img-fluid" src="{{ asset ('uploads/pictures/' ~ trick.pictures[0].fileName) }}" alt="nosepress-image-49">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100 img-fluid" src="{{ asset ('uploads/pictures/' ~ trick.pictures[0].fileName) }}" alt="nosepress-image-50">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100 img-fluid" src="{{ asset ('uploads/pictures/' ~ trick.pictures[0].fileName) }}" alt="nosepress-image-51">
                                </div>
                                        
                            </div>
                            <a class="carousel-control-prev" href="#carousel" data-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </a>
                            <a class="carousel-control-next" href="#carousel" data-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </a> 
                        </div>
                    </div>                                          
                    <div class="col-lg-6 col-md-12">
                        <div id="carousel-v" class="carousel slide mt-3 mb-2" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-v" data-slide-to="0" class="active"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item  active ">
                                    <iframe class="w-100" src="{{ trick.videos[0].videoUrl | formatVideo }}"  height="200px" width="300px" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </div>                                        
                            </div>
                            <a class="carousel-control-prev" href="#carousel-v" data-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </a>
                            <a class="carousel-control-next" href="#carousel-v" data-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </a> 
                        </div>
                    </div>
                </div>  
                <hr class="my-3"/>
                <h5 class="card-title text-center">Description</h5>
                <p class="card-text text mb-2">{{ trick.description }}</p>                                        
            </div>
                <hr class="my-3"/>
                <h5 class="card-title text-center">Commentaires</h5>
            {{ form_start(form) }}
            <div class="row">
                <div class="col my-2">
                    {{ form_label(form.content) }}{{ form_widget(form.content) }}
                </div>
                <div class="col my-2">
                {{ form_row(form.submit) }}
                </div>
            {{ form_end(form) }}
                </div>
                {% for message in trick.messages %}
                 <h5>{{ loop.index }} - {{ message.content }}</5>
                 {% endfor %}
        </div>
        
    </div>
    </container>
{% endblock %}